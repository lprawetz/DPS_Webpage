<div class="background">
    <% layout("layouts/boilerplate") %>
    <%- include("../partials/navbar") %>
    <%- include("../partials/flash") %>
    <!-- banner -->
    <div class="d-flex justify-content-center background-banner">
        <h1 class="align-self-center text-center backbanner-text">ADD NEW MEDIA</h1>
    </div>
    <!-- positioning -->
    <div class="container d-flex justify-content-center align-items-center my-5">
        <div class="row form-block">
            <div class="col">
                <!-- Form for media submit -->
                <form action="/media" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
                    <div class="mb-4">
                        <label for="medium" class="form-label text-white">New File</label>
                        <input type="file" class="form-control" id="medium" name="medium" placeholder="select medium"
                            required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <div class="d-grid gap-2 my-3">
                        <button class="btn btn-primary mb-1">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>