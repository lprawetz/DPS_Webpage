<% layout("layouts/boilerplate") %>
    <div class="container">
        <h1>Add new Record</h1>
        <form action="/music" method="POST">
            <div class="col-sm-6">
                <div class="mb-1">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" class="form-control" id="name" name="music[name]" placeholder="Name">
                </div>
                <div class="mb-1">
                    <label for="tracklist" class="form-label">Tracklist</label>
                    <input type="text" class="form-control" id="tracklist" name="music[tracklist]"
                        placeholder="Tracklist">
                </div>
            </div>
            <div class="col-sm-6">
                <div class="mb-1">
                    <label for="publishes" class="form-label">Published</label>
                    <input type="number" class="form-control" id="publishes" name="music[publishes]" placeholder="Jahr">
                </div>
                <div class="mb-3">
                    <label for="cover" class="form-label">Cover</label>
                    <input type="text" class="form-control" id="cover" name="music[]"
                        placeholder="Dabeiname Coverbild (+ .jpg)">
                </div>
                <button class="btn btn-primary">Save</button>
            </div>
        </form>
    </div>