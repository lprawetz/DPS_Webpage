<div class="background">
    <% layout("layouts/boilerplate") %>
    <%- include("../partials/navbar") %>
    <div class="d-flex flex-column flex-lg-row mx-2 my-5">
        <div class="col-12 col-lg-6 text-center">
            <img src="<%= record.cover %>" class="record-cover" alt="<%= record.name %>">
        </div>
        <div class="col-12 col-lg-6 mb-5">
            <div class="container">
                <div class="row">
                    <h1 class="text-white mt-4">
                        <%= record.name %>
                    </h1>
                </div>
                <div class="row mt-3">
                    <% for(let i = 0; i<record.songs.length; i++) { %>
                    <p class="text-white border-bottom lead">
                        <%= record.songs[i] %>
                    </p>
                    <% } %>
                </div>
                <div class="row mt-3">
                    <h4 class="text-white">Purchase on</h4>
                    <a href="https://open.spotify.com/album/1Nx8Fbrf3KsUZwKXmQaite"><i
                            class="fab fa-spotify fa-lg"></i></a>
                </div>
            </div>
        </div>
    </div>
</div>