<% layout("layouts/boilerplate") %>
<div class="container d-flex flex-column flex-lg-row my-5">
    <div class="col-6">
        <img src="<%= record.cover %>" class="mt-4 record-cover" alt="<%= record.name %>">
    </div>
    <div class="col-lg-6">
        <div class="container">
            <div class="row">
                <h1 class="text-white mt-4">
                    <%= record.name %>
                </h1>
            </div>
            <div class="row mt-3">
                <ol class="ms-4">
                    <% for(let i = 0; i<record.songs.length; i++) { %>
                    <li class="text-white border-bottom lead">
                        <%= record.songs[i] %>
                    </li>
                    <% } %>
                </ol>
            </div>
            <div class="row mt-3">
                <h4 class="text-white">Purchase on</h3>
                    <a href=""><i class="fab fa-spotify fa-lg"></i></a>
            </div>
        </div>
    </div>
</div>